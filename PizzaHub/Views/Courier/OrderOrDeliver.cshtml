<div class="container text-center">
    
    <h1 style="margin-bottom: 20px;">Welcome to PizzaHub!</h1>
    <h3 style="margin-bottom: 10px;">We offer tasty pizza for hungry gamers.</h3>

    <div class="row text-md-center mt-5">
        <div class="col-md-6">
            <h2>Here to order some tasty Pizza !</h2>
            <form asp-controller="Restaurant" asp-action="Menu" method="get">
                <button type="submit" class="btn btn-primary">Order Pizza</button>
            </form>
        </div>
        <div class="col-md-6">
            <h2>Here to deliver Pizza !</h2>
            <form asp-area="Courier" asp-controller="Courier" asp-action="Index" method="get">
                <button type="submit" class="btn btn-success">Deliver Pizza</button>
            </form>
        </div>
    </div>
</div>