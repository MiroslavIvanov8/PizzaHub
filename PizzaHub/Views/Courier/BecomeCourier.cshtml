@model PizzaHub.Core.ViewModels.Courier.BecomeCourierForm

@{
    ViewData["Title"] = "Become a Courier";
}

<h2>Become a Courier</h2>

<form method="post" asp-controller="" asp-action="">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" placeholder="Enter your name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TelephoneNumber">Telephone Number:</label>
        <input asp-for="TelephoneNumber" class="form-control" placeholder="Enter your telephone number" required />
        <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Say some words about yourself"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Application</button>
</form>