@model PizzaHub.Core.ViewModels.Courier.BecomeCourierForm

@{
    ViewData["Title"] = "Become a Courier";
}

<h2>Become a Courier</h2>

<form method="post" asp-controller="Courier" asp-action="BecomeCourier">
    <div class="form-group">
        <label asp-for="PhoneNumber">Telephone Number:</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your telephone number" required />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Say some words about yourself"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Application</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}