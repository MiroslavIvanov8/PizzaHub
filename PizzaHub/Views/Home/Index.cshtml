@model bool

<div style="display: flex; flex-direction: column; align-items: center; justify-content: flex-start; height: 100vh; margin-top: 50px;">
    <h1 style="margin-bottom: 20px;">Welcome to PizzaHub!</h1>
    <h3 style="margin-bottom: 10px;">We offer tasty pizza for hungry gamers.</h3>
    <h3 style="margin-bottom: 20px;">So, are you hungry?</h3>

    @if (Model)
    {
        <div class="card" style="align-self: center; width: 300px; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            <p style="margin-bottom: 10px;">Choose an option below:</p>
            <form asp-controller="Restaurant" asp-action="Menu" method="get" style="margin-bottom: 10px;">
                <button type="submit" class="btn btn-primary">Yes, Show Me the Menu!</button>
            </form>

            <form asp-controller="Courier" asp-action="OrderOrDeliver" method="get">
                <button type="submit" class="btn btn-secondary">No, Thanks, I am Fine.</button>
            </form>
        </div>
    }
    else
    {
        <div class="card" style="align-self: center; width: 300px; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); text-align: center;">
            <p style="margin-bottom: 10px;">Are you here to order a pizza? Check out our menu!</p>
            <form asp-controller="Restaurant" asp-action="Menu" method="get" style="margin-bottom: 10px;">
                <button type="submit" class="btn btn-primary">Yes, please!</button>
            </form>
        </div>
    }

    <p style="margin-top: 20px; font-style: italic;">If you're not sure, you can always explore our menu or return later.</p>
</div>