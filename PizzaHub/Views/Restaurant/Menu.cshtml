@model IEnumerable<PizzaHub.Core.ViewModels.MenuItem.MenuItemViewModel>
@{
    ViewBag.Title = "Our Menu";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var i in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <img class="card-img-top" style="width: 18rem;" src="@i.ImageUrl" alt="Pizza Image">
                <h5 class="card-title mt-1">@i.Name</h5>
                <h5 class="card-title mt-1">@i.Price</h5>
            </div>

            <form asp-controller="Cart" asp-action="Add" method="post" class="mb-2">
                <input type="hidden" name="itemId" value="@i.Id" />

                <div class="input-group">
                    <input type="number" name="quantity" class="form-control" value="1" min="1" required />
                    <div class="input-group-append">
                        <span class="input-group-text">Quantity</span>
                    </div>
                </div>

                <button type="submit" class="btn btn-warning mt-2 w-100 p-3 fw-bold">Add to Cart</button>
            </form>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
