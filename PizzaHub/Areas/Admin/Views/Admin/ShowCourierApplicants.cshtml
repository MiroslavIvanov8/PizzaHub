@model IEnumerable<PizzaHub.Core.ViewModels.Courier.CourierApplicantModel>

@{
    ViewData["Title"] = "Courier Applicants";
}

<h1>Courier Applicants</h1>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Full Name</th>
        <th>Age</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var applicant in Model)
    {
        <tr>
            <td>@applicant.FullName</td>
            <td>@applicant.Age</td>
            <td>@applicant.Email</td>
            <td>@applicant.PhoneNumber</td>
            <td>
                    <form asp-controller="Admin" asp-action="CourierApplicantDetails" asp-route-id="@applicant.Id" method="post">
                    <button type="submit" class="btn btn-info">Details</button>
                </form>
                
            </td>
        </tr>
    }
    </tbody>
</table>