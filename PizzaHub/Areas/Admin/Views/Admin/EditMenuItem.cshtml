@model PizzaHub.Core.ViewModels.MenuItem.MenuItemFormModel

<h1>Edit Menu Item</h1>

<form asp-controller="Admin" asp-action="EditMenuItem" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ingredients"></label>
        <textarea class="form-control" asp-for="Ingredients"></textarea>
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input type="text" class="form-control" asp-for="ImageUrl" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="number" class="form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>