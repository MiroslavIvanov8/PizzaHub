@model PizzaHub.Core.ViewModels.Courier.CourierApplicantModel

@{
    ViewData["Title"] = "Courier Applicant Details";
}

<h1>Courier Applicant Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Full Name:</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Age:</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone Number:</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<div>
    <form asp-action="ApproveCourierApplicant" asp-route-id="@Model.Id" method="post" style="display: inline-block; margin-right: 10px;">
        <button type="submit" class="btn btn-success">Approve</button>
    </form>

    <form asp-action="DeclineCourierApplicant" asp-route-id="@Model.Id" method="post" style="display: inline-block;">
        <button type="submit" class="btn btn-danger">Decline</button>
    </form>
</div>