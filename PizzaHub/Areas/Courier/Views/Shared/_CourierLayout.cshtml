<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PizzaHub.styles.css" asp-append-version="true" />
    <style>
        /* Dropdown Button */
        .nav-item.dropdown:hover .dropdown-menu {
            color: black;
            display: block;
        }

        /* Dropdown Content */
        .dropdown-menu {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            /* Links inside the dropdown */
            .dropdown-menu a {
                color: black; /* Changed from light gray to black */
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Courier" asp-controller="Courier" asp-action="Index">PizzaHub Couriers</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenu" role="button" aria-haspopup="true" aria-expanded="false" style="color: black;">
                                Menu
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenu">
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Show Today Income</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Stop for Today</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownOrders" role="button" aria-haspopup="true" aria-expanded="false" style="color: black;">
                                Orders
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownOrders">
                                <a class="dropdown-item" asp-area="Courier" asp-controller="Order" asp-action="PickOrders">Pick Order</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Your Picked Orders</a>
                            </div>
                        </li>
                    </ul>
                    <partial name="_CourierLogoutPartial" />
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - PizzaHub
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>